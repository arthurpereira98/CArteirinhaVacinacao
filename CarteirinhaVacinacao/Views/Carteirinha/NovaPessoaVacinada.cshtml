@using CarteirinhaVacinacao.Models
@using CarteirinhaVacinacao.ViewModel
@model CarteirinhaVacinacao.ViewModel.ViewModelPessoaVacinada

@{
    ViewData["Title"] = "Vacinar Pessoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Vacinacao Pessoa.</h2>
<div class="row">
    <div class="col-md-5">
        <form asp-action="NovaPessoaVacinada" method="post">
            <div class="form-horizontal">
                <hr />
                <div class="form-group">
                    <label asp-for="PessoaVacinada.IdPessoaVacinada" class="col-md-2 control-label">ID Pessoa Vacinada</label>
                    <div class="col-md-10">
                        <input asp-for="PessoaVacinada.IdPessoaVacinada" class="form-control" readonly value="0" />
                        <span asp-validation-for="PessoaVacinada.IdPessoaVacinada" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="IdPessoa" class="control-label col-md-2">Id Pessoa</label>
                    <div class="col-md-10">
                        <input asp-for="PessoaVacinada.IdPessoa" type="number" id="IdPessoa" name="IdPessoa" class="form-control" readonly value="@Model.Pessoa.IdPessoa">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Nome" class="control-label col-md-2">Nome</label>
                    <div class="col-md-10">
                        <input type="text" id="Nome" name="Nome" class="form-control" readonly value="@Model.Pessoa.Nome">
                    </div>
                </div>
                <div class="form-group">
                    <label for="IdVacina" class="col-md-2 control-label">Vacina</label>
                    <div class="col-md-10">
                        <select id="IdVacina" name="IdVacina" class="form-control" required>
                            <option value="0">Selecione a Vacina</option>
                            @foreach (Vacina vac in Model.Vacinas)
                            {
                                <option value="@vac.IdVacina">@vac.Nome</option>
                            }

                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <button class="btn btn-default" type="submit" value="submit">Vacinar Pessoa</button>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>